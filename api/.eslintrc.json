{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": "airbnb-base",
  "rules": {
    "func-names": ["off"],
    "max-len": ["error", 120],
    "no-underscore-dangle": ["error", {
      "allow": [
        "_id",
        "__v",
        "_get",
        "_find",
        "_create",
        "_update",
        "_patch",
        "_remove"
      ]
    }]
  }
}
